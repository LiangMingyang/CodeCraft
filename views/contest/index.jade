extends ../layout
block title
    - var whichPage = "赛事列表"
    title #{whichPage}
block content
    //.col-lg-2
    //.col-lg-8
    .col-lg-12
        h3 所有赛事
        table(class = "table table-striped")
            tr
                td 赛事ID
                td 赛事名称
                td 赛事开始时间
                td 赛事结束时间
            - for (var i = 0 ; i < contests.length ; ++i)
                - var contest = contests[i];
                tr
                    td #{contest.id}
                    td
                        a(href= "#{contest.id}") #{contest.title}
                    td #{contest.start_time.toLocaleString()}
                    td #{contest.end_time.toLocaleString()}
    //.col-lg-2