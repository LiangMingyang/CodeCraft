extends ../layout

block title
    - var whichpage = "小组成员"
    title #{whichpage}

block content
    .col-lg-2
        include ./group.jade
    .col-lg-8
        h3 小组成员
        table(class = "table table-striped").containing
            tr
                td 昵称
                td 身份
            - for (var i = 0 ; i < group.users.length ; ++i)
                - var member = group.users[i]
                tr
                    td
                        a(href= "/user/#{member.id}") #{member.nickname}
                    td #{member.membership.access_level}
    .col-lg-2