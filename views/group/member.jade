extends ../layout

block title
    - var whichpage = "小组成员"
    title #{whichpage}

block content
    .col-lg-2
        table.table.table-striped
            tr
                td 小组名称
            tr
                td
                    a(href="../#{group.id}")= group.name
            tr
                td 小组简介
            tr
                td #{group.description}
            tr
                td 小组成员
            tr
                td
                    a(href="../#{group.id}/member") 查看详情
    .col-lg-8
        table(class = "table table-striped")
            tr
                td 昵称
                td 身份
            - for (var i = 0 ; i < group.users.length ; ++i)
                - var member = group.users[i]
                tr
                    td
                        a(href= "/user/#{member.id}") #{member.nickname}
                    td #{member.membership.access_level}
    .col-lg-2