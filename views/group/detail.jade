block title
    - var whichPage = "小组信息"
    title #{whichPage}

block content
    .col-lg-2
        include ./group.jade
    .col-lg-8
        - if ( !isMember )
            a.button.btn.btn-default(href="join" style="margin-top:20px") 加入该小组
        //- else
            a.button.btn.btn-default(href="quit") 退出该小组
        if(group)
            h3 #{group.name}的小组简介
            p.containing #{group.description}
