    user
        -email 用户名
        -nickname 昵称
        -shoool 学校
        -college 学院
        -description 个人简介
        -student_id 学号

extends ../layout

block title
    - var whichPage = "个人信息"
    title #{whichPage}

block content
    .col-lg-2.col-md-2.col-sm-2.col-xs-2
        include ./user.jade
    .col-lg-8.col-md-8.col-sm-8.col-xs-8
        - if (user && target && user.id === target.id)
            h3 个人信息
        - else if(target)
            h3 #{target.nickname}的信息
        if(target)
            //span 昵称
            //span #{target.nickname}
            table.table.table-hover
                tr
                    td 昵称
                    td #{target.nickname}
                tr
                    td 学校
                    td #{target.school}
                tr
                    td 专业
                    td #{target.college}
                tr
                    td 学号
                    td #{target.student_id}
                tr
                    td 简介
                    td #{target.description}
    .col-lg-2.col-md-2.col-sm-2.col-xs-2