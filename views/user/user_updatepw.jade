    表单
        -oldPwd 旧密码
        -newPwd 新密码
extends ../layout

block title
    - var whichPage = "修改密码"
    title #{whichPage}

block content
    .col-lg-2
        include ./user.jade
    .col-lg-8
        h3 修改密码
        form(method='post').containing
            .form-horizontal
                .form-group
                    .col-lg-2
                        label.control-label(for="oldPwd")  请输入旧密码：
                    .col-lg-10
                        input.form-control(type="password", name='oldPwd', id="oldPwd")
            .form-horizontal
                .form-group
                    .col-lg-2
                        label.control-label(for="newPwd")  请输入新密码：
                    .col-lg-10
                        input.form-control(type="password", name='newPwd', id="newPwd")
            .form-horizontal
                .form-group
                    .col-lg-2
                        label.control-label(for="confirmNewPwd")  请确认新密码：
                    .col-lg-10
                        input.form-control(type="password", name='confirmNewPwd', id="confirmNewPwd")
            button.btn.btn-default(type="submit") 确认修改
    .col-lg-2