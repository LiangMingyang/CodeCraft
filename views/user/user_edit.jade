    表单
        -nickname 昵称
        -shoool 学校
        -college 学院
        -description 个人简介

extends ../layout
block content
    .col-lg-2
        include ./user.jade
    .col-lg-10
        form(method='post')
            .form-group
                label 昵称
                input.form-control(type="input", name='nickname' value=user.nickname)
            .form-group
                label 学校
                select.form-control(type="input", name='school' value=user.school)
                    option(value="北京航空航天大学") 北京航空航天大学
                    option(value="北京邮电大学") 北京邮电大学
            .form-group
                label 专业
                select.form-control(type="input", name='college' value=user.school)
                    option(value="软件学院") 软件学院
                    option(value="计算机学院") 计算机学院
            .form-group
                label 简介
                input.form-control(type="input", name='description' value=user.description)
            button.btn.btn-default(type="submit") 确认
