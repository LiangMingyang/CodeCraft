extends ../layout

block title
    - var whichPage = "登录"
    title #{whichPage}

block content
    .col-lg-3.col-md-3.col-sm-3.col-xs-3
    .col-lg-6.col-md-6-col-sm-6.col-xs-6
        h3 登录
        form(method='post').containing
            .form-group
                label.sr-only(for="email") 邮箱
                input.form-control(type="email", id="email", name='username', placeholder="输入邮箱")
            .form-group
                label.sr-only(for="password") 密码
                input.form-control(type="password", id="password", name='password', placeholder="输入密码")
            input(type="hidden" name="returnUrl", value="#{returnUrl}")
            button.btn.btn-default.loginbtn(type="submit") 登录
            a.button.btn.btn-default.loginbtn(href="/user/register") 注册
            a.button.btn.btn-default.loginbtn(href="/user/resetpw") 找回密码
    .col-lg-3.col-md-3.col-sm-3.col-xs-3