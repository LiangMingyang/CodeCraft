extends ../layout
block content
    h1 登录
    form(method='post')
        .form-group
            label 邮箱
            input.form-control(type="email", name='username')
        .form-group
            label 密码
            input.form-control(type="password", name='password')
        button.btn.btn-default(type="submit") 登录
        a.button.btn.btn-default(href="/user/register") 注册
        a.button.btn.btn-default(href="/user/resetpw") 找回密码