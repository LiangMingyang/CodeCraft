extends ../layout
block content
    h3 注册
    form(method='post')
        .form-group
            label 邮箱
            input.form-control(type="email", name='username')
        .form-group
            label 密码
            input.form-control(type="password", name='password')
        .form-group
            label 重复密码
            input.form-control(type="password", name='password2')
        .form-group
            label 昵称
            input.form-control(type="input", name='nickname')
        button.btn.btn-default(type="submit") 注册
