.form-horizontal
    label.control-label  当前用户：
.form-horizontal
    a(href="/user/" + user.id + "/index", id="informationpage")
        label.control-label #{user.nickname}

.list-group
    a(class="list-group-item normal-color", id="problem-problemindexpage", href="./index") 题目信息
    a(class="list-group-item normal-color", id="problem-submissionpage", href="./submission") 评测记录
script.
    if("#{whichPage}"=="评测记录"||"#{whichPage}"=="比赛题目提交记录")
        $("#problem-submissionpage").attr("class","list-group-item change-color");
    else
        $("#problem-problemindexpage").attr("class","list-group-item change-color");
.button(type="button", class="btn btn-primary btn-lg", data-toggle="modal", data-target="#myModal") 提交代码

#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
            form(method='post', action='./submit')
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4#myModalLabel.modal-title 提交代码
                .modal-body
                    .row
                        .col-lg-3
                            |语言选择：
                        .col-lg-9
                            select(type="input", name='lang', value='C')
                                option(value="c++") c++
                                option(value="c") c
                                option(value="jave") java
                    |源代码：
                    label.sr-only(for="code") 输入代码
                    textarea.form-control(type="input", rows="10", id="code", name='code', placeholder="输入您的代码")
                .modal-footer
                    //button.btn.btn-default(type='button', data-dismiss='modal') 取消
                    button.btn.btn-primary(type='submit') 确认提交