extends ../layout
block title
    - var whichpage = "题目列表"
    title #{whichpage}
block content
    //.col-lg-2
    //.col-lg-8
    .col-lg-12
        h3 所有题目
        table(class = "table table-striped")
            //tr
                td.col-lg-1 题目ID
                td.col-lg-2 所属小组
                td.col-lg-6 题目名称
                td.col-lg-1 难度
                td.col-lg-2 通过率(通过/提交)
            tr
                td 题目ID
                td 所属小组
                td 题目名称
                td 难度
                td 通过率(通过/提交)
            - for (var i = 0 ; i < problems.length ; ++i)
                - var problem = problems[i];
                tr
                    td
                        a(href= "#{problem.id}/index") #{problem.id}
                    td
                        a(href= "../group/#{problem.group.id}/index") #{problem.group.name}
                    td
                        a(href= "#{problem.id}/index") #{problem.title}
                    td.progress
                        - var level = (i+1)*30;
                        - if (level < 10) level = 10;
                        - if (level < 50)
                            .progress-bar.progress-bar-success.active.progress-bar-striped(style='width: #{level}%')
                                span.sr-only #{level}% Complete (success)
                        - else if (level < 80)
                            .progress-bar.progress-bar-warning.active.progress-bar-striped(style='width: #{level}%')
                                span.sr-only #{level}% Complete (warning)
                        - else
                            .progress-bar.progress-bar-danger.active.progress-bar-striped(style='width: #{level}%')
                                span.sr-only #{level}% Complete (danger)
                        //script.
                            .progress-bar.progress-bar-success.active.progress-bar-striped(style='width: 50%')
                                span.sr-only 50% Complete (success)
                            .progress-bar.progress-bar-warning.active.progress-bar-striped(style='width: 30%')
                                span.sr-only 30% Complete (warning)
                            .progress-bar.progress-bar-danger.active.progress-bar-striped(style='width: 20%')
                                span.sr-only 20% Complete (danger)
                    td 需要通过次数/提交次数
    //.col-lg-2