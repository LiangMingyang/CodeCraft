                        - hhh = (mmm - mmm % 60) / 60;
                        - ddd = (hhh - hhh % 24) / 24;
                        - sss = sss % 60;
                        - mmm = mmm % 60;
                        - hhh = hhh % 24;
                        - tc = "";
