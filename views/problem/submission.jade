                    tr(id = "tr" + i)
                        //-在渲染前处理时间
                        - yy = submissions[i].created_at.getFullYear();
                        - mm = submissions[i].created_at.getMonth() - 0 + 1;
                        - if(mm<10)
                            - mm="0"+mm;
                        - dd = submissions[i].created_at.getDate();
                        - if(dd<10)
                            - dd="0"+dd;
                        - hh = submissions[i].created_at.getHours();
                        - if(hh<10)
