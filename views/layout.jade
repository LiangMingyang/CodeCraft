doctype html
html
    head
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/layout.css')
        block title
            - var whichpage = "OJ4TH"
            title #{whichpage}
        script(src="/js/jquery-2.1.1.min.js")
        script(src="/js/bootstrap.min.js")
        block script
    body
        .container-fluid
            .col-lg-1
            .col-lg-10
                .row
                    block navbar
                        nav#navbar.navbar.navbar-default
                            .container-fluid
                                // Brand and toggle get grouped for better mobile display
                                .navbar-header
                                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
                                        span.sr-only Toggle navigation
                                        span.icon-bar
                                        span.icon-bar
                                        span.icon-bar
                                    a.navbar-brand(href="/", id="logo", data-toggle="popover", data-trigger="focus", data-placement="bottom", data-content="") 这里应该是一个Logo哒
                                // Collect the nav links, forms, and other content for toggling
                                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                                    ul.nav.navbar-nav.navbar-right
                                        li.normalli
                                            a(href="/", id="index") 主页
                                        li.normalli
                                            a(href="/group", id="group") 小组
                                        - if(user)
                                            li.normalli
                                                a(href="/user/" + user.id, id="information") 个人信息
                                            //li.normalli
                                                a(href="/user/"+user.id+"/edit") 修改信息
                                            li.normalli
                                                a(href="/user/messege", id="messege") 消息
                                            li.normalli
                                                a(href="/user/logout", id="logout") 登出
                                        - else
                                            li.normalli
                                                a(href="/user/login", id="login") 登录
                                            li.normalli
                                                a(href="/user/register", id="register") 注册
                                        script.
                                            if("#{whichpage}"=="注册")
                                                $("#register").attr("class","little-big-font");
                                            else if("#{whichpage}"=="登录")
                                                $("#login").attr("class","little-big-font");
                                            else if("#{whichpage}"=="")
                                                $("#logout").attr("class","little-big-font");
                                            else if("#{whichpage}"=="")
                                                $("#messege").attr("class","little-big-font");
                                            else if("#{whichpage}"=="个人信息"||"#{whichpage}"=="修改信息"||"#{whichpage}"=="修改密码")
                                                $("#information").attr("class","little-big-font");
                                            else if("#{whichpage}"=="申请创建小组"||"#{whichpage}"=="小组信息"||"#{whichpage}"=="所有小组"||"#{whichpage}"=="小组成员"||"#{whichpage}"=="小组题目")
                                                $("#group").attr("class","little-big-font");
                                            else
                                                $("#index").attr("class","little-big-font");


                    .alert-success
                        - if (messages.info)
                            .message.info
                                script $("#logo").attr("data-content","#{messages.info}");
                                script $("#logo").popover('show');
                                script setTimeout(function () {$("#logo").popover('hide');}, 3000);
                .row
                    block content
                .row
                    block footer
                        footer.footer
                            p.text-center
                                | College of Software, Beihang University
                                br
                                a(href="/help") 帮助---0w0---
            .col-lg-1