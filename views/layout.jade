doctype html
html
    head
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/layout.css')
        block title
            - var whichpage = "OJ4TH"
            title #{whichpage}
        script(src="/js/jquery-2.1.1.min.js")
        script(src="/js/bootstrap.min.js")
        block script
    body
        .container-fluid
            .col-lg-1
            .col-lg-10
                .row
                    block navbar
                        //.navbar-fixed-top.navbar-navbar-top
                        nav#navbar.navbar.navbar-default
                            .container-fluid
                                // Brand and toggle get grouped for better mobile display
                                .navbar-header
                                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
                                        span.sr-only Toggle navigation
                                        span.icon-bar
                                        span.icon-bar
                                        span.icon-bar
                                    a.navbar-brand(href="/", id="logo", data-toggle="popover", data-trigger="focus", data-placement="bottom", data-content="") 这里应该是一个Logo哒
                                // Collect the nav links, forms, and other content for toggling
                                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                                    ul.nav.navbar-nav.navbar-right
                                        li.normalli
                                            a(href="/", id="indexpage") 主页
                                        li.normalli
                                            a(href="/group/index", id="grouppage") 小组
                                        li.normalli
                                            a(href="/problem/index", id="problempage") 题目
                                        li.normalli
                                            a(href="/contest/index", id="contestpage") 赛事
                                        - if(user)
                                            li.normalli
                                                a(href="/user/" + user.id + "/index", id="informationpage") 个人信息
                                            li.normalli
                                                a(href="/user/messege", id="messegepage") 消息
                                            li.normalli
                                                a(href="/user/logout", id="logoutpage") 登出
                                        - else
                                            li.normalli
                                                a(href="/user/login", id="loginpage") 登录
                                            li.normalli
                                                a(href="/user/register", id="registerpage") 注册
                                        script.
                                            if("#{whichpage}"=="注册")
                                                $("#registerpage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="登录")
                                                $("#loginpage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="")
                                                $("#logoutpage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="")
                                                $("#messegepage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="个人信息"||"#{whichpage}"=="修改信息"||"#{whichpage}"=="修改密码")
                                                $("#informationpage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="赛事列表"||"#{whichpage}"=="赛事信息")
                                                $("#contestpage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="题目列表"||"#{whichpage}"=="题目信息"||"#{whichpage}"=="提交记录"||"#{whichpage}"=="查看代码"||"#{whichpage}"=="小组题目")
                                                $("#problempage").attr("class","little-big-font");
                                            else if("#{whichpage}"=="申请创建小组"||"#{whichpage}"=="小组信息"||"#{whichpage}"=="所有小组"||"#{whichpage}"=="小组成员"||"#{whichpage}"=="小组题目")
                                                $("#grouppage").attr("class","little-big-font");
                                            else
                                                $("#indexpage").attr("class","little-big-font");


                    .alert-success
                        - if (messages.info)
                            .message.info
                                script $("#logo").attr("data-content","#{messages.info}");
                                script $("#logo").popover('show');
                                script setTimeout(function () {$("#logo").popover('hide');}, 3000);
                .row
                    block content
                .row
                    block footer
                        footer.footer
                            p.text-center
                                | College of Software, Beihang University
                                br
                                a(href="/help") 帮助---0w0---
            .col-lg-1