extends ../layout
block title
    - var whichPage = "系统消息"
    title #{whichPage}

block content
   .col-lg-12
      h3 系统消息
      table(class = "table table-striped")
         tr
            td 消息ID
            td 消息内容
            td 发送时间
         - for (var i = 0 ; i < messages.length ; ++i)
               tr
               td #{messages[i].id}
               td #{messages[i].content}
               td #{messages[i].created_at}